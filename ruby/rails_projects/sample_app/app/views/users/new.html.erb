<h1>Inscription</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="field">
    <%= f.label :nom %><br />
    <%= f.text_field :nom %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
    <div class="field">
    <%= f.label :dateNaissance %><br />
    <%= f.date_select :dateNaissance,  start_year: 1901 %>
  </div>
  <div class="field">
    <%= f.label :poidsActuel %><br />
    <%= f.text_field :poidsActuel %>
  </div>
  <div class="field">
    <%= f.label :poidsIdeal %><br />
    <%= f.text_field :poidsIdeal %>
  </div>
  <div class="field">
    <%= f.label :taille %><br />
    <%= f.text_field :taille %>
  </div>
  <div class="field">
    <%= f.label "Est Sportif" %><br />
    <%= f.label "Oui" %><%= f.radio_button :estSportif, 1 %>
    <%= f.label "Non" %><%= f.radio_button :estSportif, 0 %>
  </div>
  <div class="field">
    <%= f.label "Souhaite faire du sport" %><br />
    <%= f.label "Oui" %><%= f.radio_button :souhaitePratiquerSport, 1 %>
    <%= f.label "Non" %><%= f.radio_button :souhaitePratiquerSport, 0 %>
  </div>
  <div class="actions">
    <%= f.submit "Inscription" %>
  </div>
<% end %>