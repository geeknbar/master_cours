#include <iostream>
#include "node.h"
#include "Person.h"
using namespace std;

void node_int(){


	//	   4
	//	  /  \
	//	 3	  5
	//  / \
	// 1   2
	//
	// donne 1 3 2 4 5

	Node<int> n1(1),n2(2),n3(3),n4(4),n5(5);
	n3.add(&n1);
	n3.add(&n2);
	n4.add(&n3);
	n4.add(&n5);

	cout << "initial = " << n4 << "\n";
	Node<int> *newC = n4.clone();
	cout << "cloner = " << *newC << "\n";






}
//===================================================
void node_person(){

	Node<Person> n1(Person("D",1));
	Node<Person> n2(Person("E",2));
	Node<Person> n3(Person("B",3));
	Node<Person> n4(Person("A",4));
	Node<Person> n5(Person("C",5));

	n3.add(&n1);
	n3.add(&n2);
	n4.add(&n3);
	n4.add(&n5);

	cout << "initial = " << n4 << "\n";
	Node<Person> *newC = n4.clone();
	cout << "cloner = " << *newC << "\n";
	cout << "counter = " << Person::counter << "\n";
}

//===================================================
void node_ptr_person(){

	Person *p1 = new Person("D",1);
	Person *p1 = new Person("E",2);
	Person *p1 = new Person("B",3);
	Person *p1 = new Person("A",4);
	Person *p1 = new Person("C",5);

	Node<Person *> n1(Person("D",1));
	Node<Person *> n2(Person("E",2));
	Node<Person *> n3(Person("B",3));
	Node<Person *> n4(Person("A",4));
	Node<Person *> n5(Person("C",5));

	n3.add(&n1);
	n3.add(&n2);
	n4.add(&n3);
	n4.add(&n5);

	cout << "initial = " << n4 << "\n";
	Node<Person> *newC = n4.clone();
	cout << "cloner = " << *newC << "\n";
	cout << "counter = " << Person::counter << "\n";
}
int main() {
	node_int();
	node_person();
	return 0;
}
